{
  "plugins": ["jest", "@typescript-eslint"],
  "extends": [
    "plugin:github/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {
    "eslint-comments/no-use": "off"
  },
  "env": {
    "node": true,
    "es6": true,
    "jest/globals": true
  }
}
